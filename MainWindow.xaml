        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Adani.common.HelpModWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" >
    <Grid>
        <TextBlock x:Name="textBlock1" Grid.Row="1" Text="{Binding BaseDirectory, UpdateSourceTrigger=PropertyChanged}"  />
